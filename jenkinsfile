pipeline {
    agent any
    tools {
        maven 'maven' 
    }
    stages {
 stage('clean up') {
            steps {
                deleteDir()
            }
        }
       stage('clone repo') {
            steps {
                git branch: 'main', url: 'https://github.com/kaiselhabib/jenkinstp3.git'
            }
        }
    
        stage('Build Spring') {
            
            steps {
                sh "mvn clean install"
                sh 'docker build -t backend .'
            }
        }
      
        stage('Run Docker compose') {
            steps {
                    sh 'docker-compose up -d'
                
            }
        }
    }
}
